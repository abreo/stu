<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nihao.dao.RoleMapper" >
  <resultMap id="BaseResultMap" type="com.nihao.model.Role" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="rolename" property="rolename" jdbcType="VARCHAR" />
    <result column="iconcls" property="iconcls" jdbcType="VARCHAR" />
    <result column="description" property="description" jdbcType="VARCHAR" />
    <result column="seq" property="seq" jdbcType="INTEGER" />
    <result column="cdatetime" property="cdatetime" jdbcType="TIMESTAMP" />
    <result column="udatetime" property="udatetime" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <select id="selectListByUserId" resultType="com.nihao.model.Role" parameterType="java.lang.Integer">
  select a.*
  from role a,user2role b
  where a.id=b.roleid
  and b.userid=#{userId,jdbcType=INTEGER}
  </select>
  
  <select id="selectListByUserIdPagination" resultType="com.nihao.model.Role" parameterType="java.util.HashMap">
  select a.*
  from role a,user2role b
  where a.id=b.roleid 
  and b.userid=#{userid,jdbcType=INTEGER}
		<if test="rolename != null">
			and a.rolename like concat('%',#{rolename},'%')
		</if>
		<if test="sort!=null">
			order by a.${sort}
			<if test="order!=null">
				${order}
			</if>
		</if>
  </select>
  
  <select id="selectCount" parameterType="java.util.HashMap"
		resultType="java.lang.Long">
	select count(*)
  from role a,user2role b
  where a.id=b.roleid 
  and b.userid=#{userid,jdbcType=INTEGER}
		<if test="rolename != null">
			and a.rolename like concat('%',#{rolename},'%')
		</if>
	</select>
  
  <delete id="deleteUser2RoleByUserId" parameterType="java.lang.Integer">
  delete from user2role where userid=#{userId}
  </delete>
  
  <insert id="batchInsertUser2Role" parameterType="java.util.List">
  insert into user2role (userid,roleid) values
  <foreach collection="list" item="item" separator =",">
  (
  #{item.userId},#{item.roleId}
  )
  </foreach>
  </insert>
  
  <select id="selectRoleById" parameterType="java.lang.Integer" resultType="com.nihao.model.Role">
  select * from role where id=#{id}
  </select>

    <update id="update" parameterType="com.nihao.model.Role">
        update role
        <trim prefix="set" suffixOverrides=",">
            <if test="rolename!=null">
                <choose>
                    <when test="rolename!=''">
                        rolename=#{rolename},
                    </when>
                    <otherwise>
                        rolename=null,
                    </otherwise>
                </choose>
            </if>
            <if test="iconcls!=null">
                <choose>
                    <when test="iconcls!=''">
                        iconcls=#{iconcls},
                    </when>
                    <otherwise>
                        iconcls=null,
                    </otherwise>
                </choose>
            </if>
            <if test="description!=null">
                <choose>
                    <when test="description!=''">
                        description=#{description},
                    </when>
                    <otherwise>
                        description=null,
                    </otherwise>
                </choose>
            </if>
            <if test="seq!=null">
                seq=#{seq},
            </if>
            udatetime=now()
        </trim>
        where id=#{id}
    </update>

    <delete id="deleteRole2ResourceByRoleId" parameterType="java.lang.Integer">
        delete from role2resource where roleid=#{id}
    </delete>

    <delete id="deleteUser2RoleByRoleId" parameterType="java.lang.Integer">
        delete from user2role where roleid=#{id}
    </delete>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from role where id=#{id}
    </delete>

    <select id="selectByRolename" parameterType="java.lang.String" resultType="com.nihao.model.Role">
        select * from role where rolename=#{rolename} limit 1
    </select>

    <insert id="insert" parameterType="com.nihao.model.Role">
        insert into role(rolename,iconcls,description,seq,cdatetime,udatetime)
        values(#{rolename},#{iconcls},#{description},#{seq},now(),now())
    </insert>
</mapper>